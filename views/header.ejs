<nav class="navbar navbar-expand-lg navbar-dark navbar-color shadow-sm">
    <div class="container-xl" id="">
        <a class="navbar-brand text-white" href="/">Chat Web app</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav me-auto">
                <% if (user) { %>
                    <li class="nav-item">
                        <span class="nav-link text-white">Hello <%= user.username %></span>
                    </li>
                <% } %>
            </ul>

            <div class="px-3 text-white text-start">
                <div class="row gx-3">
                        <div class="d-flex">
                            <% if (!user) { %>
                                <a href="/login" class="btn btn-outline-warning text-uppercase m-1" style="height: 44px;"><i class="fas fa-sign-in-alt"></i> Login</a>
                            <% } else { %>
                                <a href="/logout" class="btn btn-outline-warning text-uppercase m-1" style="height: 44px;"><i class="fas fa-sign-in-alt"></i> Logout</a>
                            <% } %>
                        </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<style>
    .navbar-color {
        background-color: #444;
    }
</style>

